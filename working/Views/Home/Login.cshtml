@{    Layout=null;}<!DOCTYPE html><html><head>    <meta name="viewport" content="width=device-width" />    <title>Login</title>    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    <style>        .box{margin:200px 33%;}        .row{margin-top:20px;}    </style></head><body>    <div class="container">        <form method="post" action="login">            <div class="box">                <div class="row">                    <div class="input-group">                        <div class="input-group-addon">用户名:</div>                        <input type="text" class="form-control"  name="username" placeholder="请输入用户名">                    </div>                </div>                    <div class="row">                    <div class="input-group">                        <div class="input-group-addon">密　码:</div>                        <input type="password" name="password" class="form-control"   placeholder="请输入密码">                    </div>                </div>                    <div class="row" style="text-align:right">                    <span style="color:red">@ViewBag.error</span>                    <input class="btn btn-primary " type="submit" value="登陆"/>                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>                </div>            </div>	    </form>    </div>    <script src="~/lib/jquery/dist/jquery.min.js"></script>    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script></body></html>